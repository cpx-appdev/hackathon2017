{
  "name": "indoor-navigation-master",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/http-status": "^0.2.30",
    "async": "^2.5.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.1",
    "compression": "^1.7.0",
    "connect-mongo": "^1.3.2",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.15.4",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.5",
    "express-validator": "^4.1.1",
    "http-status": "^1.0.1",
    "lodash": "^4.17.4",
    "lusca": "^1.5.1",
    "mongoose": "^4.11.11",
    "morgan": "^1.8.2",
    "passport": "0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.4",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.42",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.5",
    "@types/compression": "0.0.34",
    "@types/connect-mongo": "0.0.33",
    "@types/dotenv": "^4.0.1",
    "@types/errorhandler": "0.0.31",
    "@types/express": "^4.0.37",
    "@types/express-session": "1.15.3",
    "@types/jest": "^20.0.8",
    "@types/jquery": "^3.2.12",
    "@types/lodash": "^4.14.74",
    "@types/mongodb": "^2.2.11",
    "@types/mongoose": "^4.7.21",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.28",
    "@types/passport": "^0.3.4",
    "@types/passport-local": "^1.0.31",
    "@types/request": "2.0.3",
    "@types/supertest": "^2.0.3",
    "concurrently": "^3.5.0",
    "jest": "^21.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
